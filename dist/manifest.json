{
  "manifest_version": 2,
  "name": "Trackage",
  "version": "1.0.0",
  "description": "Tracking your packages with ease",
  "permissions": [ "activeTab", "alarms", "storage", "webRequest", "<all_urls>" ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [ "content-script.js" ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "List Tracking",
    "default_popup": "index.html#/list"
  },
  "icons": {
    "128": "./app/assets/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}